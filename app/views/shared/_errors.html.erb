<% if @todo.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@todo.errors.count, "error") %>
  prohibited this ToDo from being saved:
  </h4>
  <hr>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
</div>